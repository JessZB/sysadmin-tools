<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visor de Pantalla</title>
    <style>
        body,
        html {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
        }

        iframe {
            width: 100%;
            height: 100%;
            border: none;
        }
    </style>
</head>

<body>
    <iframe id="contentFrame" src="<%= targetUrl %>"></iframe>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        const screenId = '<%= screenId %>';
        const iframe = document.getElementById('contentFrame');

        // Registrar pantalla y guardar socket_id en BD
        function registerScreen() {
            socket.emit('register-screen', screenId);

            // Guardar socket_id en la base de datos
            fetch('/screens/register-socket', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ screenId, socketId: socket.id })
            }).then(res => res.json())
                .then(data => console.log('Socket registrado en BD'))
                .catch(err => console.error('Error al registrar socket:', err));
        }

        // Escuchar recarga forzada
        socket.on('force-reload', () => {
            console.log('Recargando iframe...');
            iframe.src = iframe.src;
        });

        // Reconexión automática
        socket.on('connect', () => {
            console.log('Conectado al servidor');
            registerScreen();
        });
    </script>
</body>

</html>