<!-- SLIDE MENU OVERLAY -->
<div id="slideMenuOverlay" class="slide-menu-overlay">
    <div id="slideMenu" class="slide-menu">
        <!-- Header del Menú -->
        <div class="slide-menu-header">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0 text-white">
                    <i class="fa-solid fa-server me-2"></i>SysAdmin Suite
                </h3>
                <button class="btn btn-punch btn-sm" data-slide-menu-close>
                    <i class="fa-solid fa-xmark me-1"></i> Cerrar
                </button>
            </div>
        </div>

        <!-- Contenido del Menú -->
        <div class="slide-menu-content">
            <!-- User Info -->
            <div class="user-info-slide">
                <div class="d-flex align-items-center">
                    <div class="user-avatar">
                        <i class="fa-solid fa-user"></i>
                    </div>
                    <div class="ms-3">
                        <h5 class="mb-0 text-white">
                            <%= user.username %>
                        </h5>
                        <span class="role-badge <%= user.role === 'admin' ? 'role-admin' : 'role-analista' %>">
                            <%= user.role==='admin' ? 'Administrador' : 'Analista' %>
                        </span>
                        <% if (user.branch_name) { %>
                            <div class="mt-1">
                                <small class="text-white-50">
                                    <i class="fa-solid fa-building me-1"></i>
                                    <%= user.branch_name %>
                                </small>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>

            <!-- Menu Grid -->
            <div class="menu-grid-slide">
                <!-- Dashboard -->
                <% if (user.modules && user.modules.includes('dashboard')) { %>
                    <a href="/dashboard" class="menu-card">
                        <div class="menu-icon">
                            <i class="fa-solid fa-chart-line"></i>
                        </div>
                        <h4 class="menu-title">Monitor Jobs</h4>
                        <p class="menu-description">Monitoreo de trabajos y terminales</p>
                    </a>
                    <% } %>

                        <!-- Terminales -->
                        <% if (user.modules && user.modules.includes('terminals')) { %>
                            <a href="/terminals" class="menu-card">
                                <div class="menu-icon">
                                    <i class="fa-solid fa-desktop"></i>
                                </div>
                                <h4 class="menu-title">Terminales</h4>
                                <p class="menu-description">Gestión de terminales POS</p>
                            </a>
                            <% } %>

                                <!-- Sucursales -->
                                <% if (user.modules && user.modules.includes('branches')) { %>
                                    <a href="/branches" class="menu-card">
                                        <div class="menu-icon">
                                            <i class="fa-solid fa-building"></i>
                                        </div>
                                        <h4 class="menu-title">Sucursales</h4>
                                        <p class="menu-description">Administrar sucursales</p>
                                    </a>
                                    <% } %>

                                        <!-- Usuarios -->
                                        <% if (user.modules && user.modules.includes('users')) { %>
                                            <a href="/users" class="menu-card">
                                                <div class="menu-icon">
                                                    <i class="fa-solid fa-users"></i>
                                                </div>
                                                <h4 class="menu-title">Usuarios</h4>
                                                <p class="menu-description">Gestión de usuarios</p>
                                            </a>
                                            <% } %>

                                                <!-- Códigos de Barra -->
                                                <% if (user.modules && user.modules.includes('barcode')) { %>
                                                    <a href="/barcode" class="menu-card">
                                                        <div class="menu-icon">
                                                            <i class="fa-solid fa-barcode"></i>
                                                        </div>
                                                        <h4 class="menu-title">Códigos de Barra</h4>
                                                        <p class="menu-description">Generador PLU Dibal</p>
                                                    </a>
                                                    <% } %>

                                                        <!-- Monitoreo de Servicios -->
                                                        <% if (user.modules && user.modules.includes('services')) { %>
                                                            <a href="/services" class="menu-card">
                                                                <div class="menu-icon">
                                                                    <i class="fa-solid fa-heartbeat"></i>
                                                                </div>
                                                                <h4 class="menu-title">Monitoreo Servicios</h4>
                                                                <p class="menu-description">Verificar disponibilidad</p>
                                                            </a>
                                                            <% } %>

                                                                <!-- Auditoría -->
                                                                <% if (user.modules && user.modules.includes('audit')) {
                                                                    %>
                                                                    <a href="/audit" class="menu-card accent">
                                                                        <div class="menu-icon">
                                                                            <i
                                                                                class="fa-solid fa-clock-rotate-left"></i>
                                                                        </div>
                                                                        <h4 class="menu-title">Auditoría</h4>
                                                                        <p class="menu-description">Registro de
                                                                            actividades</p>
                                                                    </a>
                                                                    <% } %>
            </div>

            <!-- Logout Button -->
            <div class="text-center mt-4">
                <a href="/logout" class="btn btn-punch btn-lg">
                    <i class="fa-solid fa-right-from-bracket me-2"></i>Cerrar Sesión
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    /* ============================================
   SLIDE MENU STYLES
   ============================================ */

    .slide-menu-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(29, 53, 87, 0.95);
        backdrop-filter: blur(10px);
        z-index: 9999;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease, visibility 0.3s ease;
        overflow-y: auto;
    }

    .slide-menu-overlay.active {
        opacity: 1;
        visibility: visible;
    }

    .slide-menu {
        position: relative;
        width: 100%;
        max-width: 1400px;
        margin: 0 auto;
        transform: translateY(-100%);
        transition: transform 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        padding: 20px;
    }

    .slide-menu.active {
        transform: translateY(0);
    }

    .slide-menu-header {
        background: linear-gradient(135deg, #457b9d, #1d3557);
        padding: 20px 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .slide-menu-content {
        padding: 0 20px 40px;
    }

    .user-info-slide {
        background: rgba(168, 218, 220, 0.15);
        backdrop-filter: blur(10px);
        border: 2px solid rgba(168, 218, 220, 0.3);
        border-radius: 15px;
        padding: 25px;
        margin-bottom: 30px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .user-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #457b9d, #1d3557);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .role-badge {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 15px;
        font-size: 0.75rem;
        font-weight: 600;
        margin-top: 5px;
    }

    .role-admin {
        background: #a8dadc;
        color: #1d3557;
    }

    .role-analista {
        background: #f1faee;
        color: #457b9d;
        border: 2px solid #a8dadc;
    }

    .menu-grid-slide {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
        margin-bottom: 20px;
    }

    .menu-card {
        background: white;
        border-radius: 20px;
        padding: 30px 20px;
        text-align: center;
        transition: all 0.3s ease;
        cursor: pointer;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
        text-decoration: none;
        color: inherit;
        display: block;
        position: relative;
        overflow: hidden;
    }

    .menu-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 5px;
        background: linear-gradient(90deg, #457b9d, #a8dadc);
        transform: scaleX(0);
        transition: transform 0.3s ease;
    }

    .menu-card:hover::before {
        transform: scaleX(1);
    }

    .menu-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .menu-icon {
        font-size: 3rem;
        margin-bottom: 15px;
        background: linear-gradient(135deg, #457b9d 0%, #1d3557 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .menu-card.accent .menu-icon {
        background: linear-gradient(135deg, #e63946 0%, #c62828 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .menu-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: #1d3557;
        margin-bottom: 8px;
    }

    .menu-description {
        font-size: 0.85rem;
        color: #457b9d;
        margin: 0;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .slide-menu {
            padding: 10px;
        }

        .slide-menu-header {
            padding: 15px 20px;
        }

        .slide-menu-content {
            padding: 0 10px 30px;
        }

        .menu-grid-slide {
            grid-template-columns: 1fr;
            gap: 15px;
        }

        .user-info-slide {
            padding: 20px;
        }

        .user-avatar {
            width: 50px;
            height: 50px;
            font-size: 1.2rem;
        }
    }

    /* Animación de scroll suave */
    .slide-menu-overlay {
        scroll-behavior: smooth;
    }

    /* Ocultar scrollbar pero mantener funcionalidad */
    .slide-menu-overlay::-webkit-scrollbar {
        width: 8px;
    }

    .slide-menu-overlay::-webkit-scrollbar-track {
        background: rgba(0, 0, 0, 0.1);
    }

    .slide-menu-overlay::-webkit-scrollbar-thumb {
        background: rgba(168, 218, 220, 0.5);
        border-radius: 4px;
    }

    .slide-menu-overlay::-webkit-scrollbar-thumb:hover {
        background: rgba(168, 218, 220, 0.8);
    }
</style>