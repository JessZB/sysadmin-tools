<%- include('../layout/header') %>

    <script>
        const currentUserId = Number('<%= user.id %>');
    </script>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Gestión de Usuarios</h2>
        <button class="btn btn-cerulean" id="btnNewUser" >
            <i class="bi bi-person-plus"></i> Nuevo Usuario
        </button>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">

            <table id="tablaUsuarios" data-toggle="table" data-url="/users/data" data-search="true"
                data-pagination="true" data-page-list="[5, 10, 25, 50]" data-show-refresh="true"
                data-show-columns="true" data-show-toggle="true" data-icons-prefix="bi" data-icons="icons"
                class="table table-hover table-bordered">

                <thead class="table-light bg-cerulean text-white">
                    <tr>
                        <th data-field="id" data-sortable="true">ID</th>
                        <th data-field="username" data-sortable="true">Usuario</th>

                        <th data-field="branch_name" data-sortable="true">Sucursal</th>

                        <th data-field="role" data-sortable="true" data-formatter="roleFormatter">Rol</th>
                        <th data-field="created_at" data-formatter="dateFormatter">Creado</th>
                        <th data-field="operate" data-formatter="actionFormatter" class="text-end">Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>


    <div class="modal fade" id="modalUsuario" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header card-header-cerulean">
                    <h5 class="modal-title" id="modalTitle">Usuario</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="userId">

                    <div class="mb-3">
                        <label class="form-label">Nombre de Usuario</label>
                        <input type="text" class="form-control" id="username" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Sucursal Asignada</label>
                        <select class="form-select" id="branchId">
                            <% branches.forEach(function(branch) { %>
                                <option value="<%= branch.id %>">
                                    <%= branch.name %>
                                </option>
                                <% }); %>
                        </select>
                        <div class="form-text small">El usuario solo verá datos de esta sucursal.</div>
                    </div>


                    <div class="mb-3">
                        <label class="form-label">Rol</label>
                        <select class="form-select" id="role">
                            <option value="admin">Administrador</option>
                            <option value="analista">Analista</option>

                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="password" placeholder="••••••">
                        <div class="form-text" id="passHelp"></div>
                    </div>



                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-frosted" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-cerulean" id="btnNewUser" id="btnSaveUser">Guardar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalPermisos" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-light">
                    <div>
                        <h5 class="modal-title fw-bold">Asignar Permisos</h5>
                        <small class="text-muted" id="permUserDisplay">-</small>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="permUserId">
                    <input type="hidden" id="permUserName">

                    <div class="alert alert-info small py-2 mb-3">
                        <i class="fa-solid fa-circle-info me-1"></i> Seleccione los módulos a los que este usuario
                        tendrá acceso.
                    </div>

                    <div class="row g-3">
                        <% systemModules.forEach(function(mod) { %>
                            <div class="col-6">
                                <div class="card h-100 shadow-sm border-0 bg-light permission-card">
                                    <div class="card-body p-2 d-flex align-items-center">
                                        <div class="form-check form-switch w-100">
                                            <input class="form-check-input module-check" type="checkbox"
                                                value="<%= mod.code %>" id="mod_<%= mod.code %>">
                                            <label class="form-check-label w-100 stretched-link"
                                                for="mod_<%= mod.code %>" style="cursor: pointer;">
                                                <i
                                                    class="fa-solid <%= mod.icon || 'fa-circle' %> text-secondary me-2"></i>
                                                <span class="fw-semibold">
                                                    <%= mod.name %>
                                                </span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" onclick="guardarPermisos()">
                        <i class="fa-solid fa-save me-1"></i> Guardar Permisos
                    </button>
                </div>
            </div>
        </div>
    </div>

    <%- include('../layout/footer') %>